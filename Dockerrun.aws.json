{
    "AWSEBDockerrunVersion": 2,
    "taskRoleArn": "arn:aws:iam::257145219782:role/LabRole",
    "volumes": [
        {
            "name": "AmazonEfs",
            "efsVolumeConfiguration": {
                "fileSystemId": "fs-03bd3e68367116cc2",
                "rootDirectory": "/",
                "transitEncryption": "ENABLED",
                "authorizationConfig": {
                    "accessPointId": "fsap-09a8a0fb927f40fd3",
                    "iam": "ENABLED"
                }
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "crud-container",
            "image": "257145219782.dkr.ecr.us-east-1.amazonaws.com/cc-repository:crudjs-latest",
            "cpu": 1024,
            "memory": 2048,
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "AmazonEfs",
                    "containerPath": "/app"
                }
            ],
            "portMappings": [   
                {
                    "appProtocol": "http",
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ],
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "database-1.cp1kqg7xmjf4.us-east-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_USER",
                    "value": "admin"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "ambatukam"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "crud_db"
                },
                {
                    "name": "PORT",
                    "value": "8000"
                }
            ]
        }
    ]
}
